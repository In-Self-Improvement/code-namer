{
  "extends": [
    "airbnb-typescript",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "max-depth": ["warn", 2],
    "prettier/prettier": ["error"],
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".tsx", ".js"] }
    ],
    "react/function-component-definition": [
      "error",
      { "namedComponents": "arrow-function" }
    ],
    "react/react-in-jsx-scope": "off",
    "max-lines": ["error", 250],
    "comma-dangle": ["error", "always-multiline"],
    "@typescript-eslint/no-unused-vars": "off", // 사용하지 않는 변수에 대한 경고를 끕니다.
    "react/prop-types": "off", // PropTypes를 사용하지 않아도 되게 합니다.
    "react/jsx-props-no-spreading": "off", // props spreading을 허용합니다.
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "@typescript-eslint/no-explicit-any": "off", // any를 허용합니다. (추후 끄기)
    "no-console": "error"
  },
  "settings": {
    "import/extensions": [".js", ".mjs", ".jsx", ".ts", ".mts", ".tsx"],
    "import/resolver": {
      "alias": {
        "map": [["~", "./src/"]],
        "extensions": [".ts", ".js", ".tsx", ".svg"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "tailwind.config.js",
    "jest.config.js",
    "craco.config.js",
    "postcss.config.js",
    "fileMock.js",
    "build/",
    "babel.config.js"
  ],
  "plugins": ["react", "import"],
  "env": {
    "browser": true
  },
  "root": true
}
